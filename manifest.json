{
    "name": "SAMuLe",
    "version": "0.1",
    "author": "Shane Davis <shane@kiwicloudninja.com>",
    "description": "Captures SAML tokens and opens them with SAMuLe, an AWSCLI Launcher that uses aws-saml.",
    "permissions": ["storage", "webRequest", "tabs", "clipboardWrite", "https://signin.aws.amazon.com/saml"],
    "background": {
        "page": "html/background.html"
    },
    "options_ui": {
        "page": "html/options.html",
        "open_in_tab": false
    },
    "browser_action": {
        "default_popup": "html/samule.html",
        "default_icon": {
            "16": "imgs/samule-logo-16.png",
            "32": "imgs/samule-logo-32.png",
            "64": "imgs/samule-logo-64.png",
            "128": "imgs/samule-logo-128.png"
        }
    },
    "icons": {
        "16": "imgs/samule-logo-16.png",
        "32": "imgs/samule-logo-32.png",
        "64": "imgs/samule-logo-64.png",
        "128": "imgs/samule-logo-128.png"
    },
    "manifest_version": 2
}
